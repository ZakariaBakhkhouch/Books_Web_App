@model IList<Book>;
@{
    Layout = "_Layout";
    ViewData["Title"] = "List of Books";
}

<h1>List of Books :</h1>
<div class="table-responsive">
    <br />

    <br />
    <a asp-action="Create" class="btn btn-primary">Add New Book</a>
    <br />
    <br />
    <table class="table table-striped table-sm table-hover table-bordered border-dark">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Genre</th>
                <th>Description</th>
                <th>Date Addes</th>
                <th>Date Read</th>
                <th>Rate</th>
                <th>Publisher Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Title</td>
                    <td>@item.Genre</td>
                    <td>@item.Description</td>
                    <td>@item.DateAdded</td>
                    <td>@item.DateRead</td>
                    <td>@item.Rate</td>
                    <td>@item.PublisherId</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>